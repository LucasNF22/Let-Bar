

 <%- include("../views/partials/head") %>

<body class="fondo">
  
    <%- include("../views/partials/headerGeneral") %>

        <main>

            <div class="logo-registro">
                <img src="/img/logo-letbar-sin-fondo.png" alt="">
            </div>
            
            <div class="formulario">
                    
                <h4>Crea tu cuenta</h4>

                <form action="/users/register" method="POST" enctype="multipart/form-data">
                    <div>
                        <label>Nombre y Apellido:</label>
                        <input class="control" type="text" name="name" placeholder="Nombre y Apellido" required>
                    </div>

                    <div>
                        <label>Email:</label>
                        <input class="control" type="email" name="email" placeholder="Email" required>
                    </div>

                    <div>
                        <label>Contraseña:</label>
                        <input class="control" type="password" name="password" placeholder="Contraseña" required>
                    </div>

                    <div >
                        <label>Repetir contraseña:</label>
                        <input class="control" type="password" name="pass_confirm" placeholder="Repetir contraseña" required>
                    </div>

                    <div>
                        <label>Número de teléfono:</label>
                        <input class="control" type="tel" name="tel" placeholder="Número de teléfono">
                    </div>

                    <div>
                        <label>Fecha de nacimiento:</label>
                        <input class="control" type="date" name="birthday" required>
                    </div>

                    <div>
                        <label>Imagen de perfil:</label>
                        <input class="control" type="file" name="avatar" >
                    </div>

                    <button type="submit" class="boton-formulario">Registrarme</button>

                    <h2>O ingresa con...</h2>

                    <div>

                    <a href="#" class="fa fa-facebook"></a>
                    <a href="#" class="fa fa-google"></a>
                    </div>
            </form>
            </div>

        </main>

        
   <!--Footer-->
   <%- include("../views/partials/footer") %>

    

</body>

</html>

